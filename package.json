{
  "name": "chuck.noris.joke.app-api",
  "version": "1.0.0",
  "description": "A joke API that gets jokes about chuck noris",
  "main": "index.js",
  "repository": "git@github.com:karlodinikozic/chucknorisjokeappAPI.git",
  "author": "karlodini.kozic <karlodini.kozic@outlook.com>",
  "license": "MIT",
  "scripts": {

    "build": "rimraf dist && npx tsc",
    "prestart": "npm run build && npm run kill-port",
    "start": "node dist/index.js",
    "kill-port": "lsof -ti :3001 | xargs kill -9 || true",
    "predev": "npm run build" ,
    "dev": "concurrently \"npx tsc -w\"  \"nodemon dist/index.js\""
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.4.9",
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "@typescript-eslint/parser": "^6.3.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.46.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.1",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "rimraf": "^3.0.2"
  }
}
